    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch App",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "Get Packages",
            "command": "f pub get",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Build Runner",
            "command": "d run build_runner build --delete-conflicting-outputs",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Launcher Icons",
            "command": "f pub run flutter_launcher_icons -f flutter_launcher_icons.yaml",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Native Splash",
            "command": "d run flutter_native_splash:create --path=flutter_native_splash.yaml",
            "request": "launch",
            "type": "node-terminal"
        }
    ]
}